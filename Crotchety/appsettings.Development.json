{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Database": {
    "Uri": "bolt://0.0.0.0:7687",
    "Username": "neo4j",
    "Password": "Qplates99",
    "DatabaseName": "crotchetydev"
